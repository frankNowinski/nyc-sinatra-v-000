<form action="/landmarks" method="post">

  <!-- Landmark Name -->
  <div class="form-group row">
    <label for="landmark_name" class="col-sm-2 form-control-label">Landmark Name:</label>
    <div class="col-sm-3">
      <input type="text" id="landmark_name" name="landmark[name]" class="form-control" placeholder="Name">
    </div>
  </div>

  <!-- Year Completed-->
  <div class="form-group row">
    <label for="song" class="col-sm-2 form-control-label">Year Completed:</label>
    <div class="col-sm-3">
      <input type="text" id="landmark_year_completed" name="landmark[year_completed]" class="form-control" placeholder="Year">
    </div>
  </div>

  <!-- Figure -->
  <div class="form-group row">
    <label for="song" class="col-sm-2 form-control-label">Figure Name:</label>
    <div class="col-sm-3">
      <input type="text" id="landmark_year_completed" name="landmark[figure]" class="form-control" placeholder="Figure">
    </div>
  </div>

  <!-- Submit Button -->
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" value="Create New Landmark" class="btn btn-primary">Create New Landmark</button>
    </div>
  </div>

</form>
